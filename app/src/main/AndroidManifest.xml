<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.italiancoders.mybudget">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/mybugdet_backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".activity.MainActivity_"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.signin.google.GoogleSignInActivity_"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".activity.signin.facebook.FacebookLoginActivity_"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".activity.signin.standard.StandardLoginActivity_"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".activity.PreferenceActivity_"
            android:theme="@style/AppTheme" />

    </application>

</manifest>